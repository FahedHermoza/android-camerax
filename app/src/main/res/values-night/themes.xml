<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme with ActionBar -->
    <style name="Theme.CameraX.Dark" parent="Theme.CameraX">

        <!-- Color -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_300</item>
        <item name="colorSecondary">@color/red_400</item>
        <item name="colorSecondaryVariant">@color/red_400</item>

        <item name="android:colorBackground">@color/black_800</item>
        <item name="colorSurface">@color/black_800</item>
        <item name="colorPrimarySurfaceVariant">?attr/colorSurface</item>
        <item name="colorError">@color/red_200</item>

        <item name="colorOnPrimary">@color/black_900</item>
        <item name="colorOnSecondary">@color/black_900</item>
        <item name="colorOnBackground">@color/black_800</item>
        <item name="colorOnSurface">@color/white_50</item>
        <item name="colorOnError">@color/red_200</item>

        <item name="scrimBackground">@color/black_900_alpha_087</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <item name="elevationOverlayEnabled">false</item>

        <!-- System/Platform attributes -->
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

    </style>

    <!-- Base Theme with NoActionBar -->
    <style name="Theme.CameraX.Dark.NoActionBar" parent="Theme.CameraX.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Final, Top-Level Themes -->
    <style name="Theme.CameraX.DayNight" parent="Theme.CameraX.Dark" />
    <style name="Theme.CameraX.DayNight.NoActionBar" parent="Theme.CameraX.Dark.NoActionBar" />

</resources>
