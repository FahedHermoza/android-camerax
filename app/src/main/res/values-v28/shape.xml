<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Shape -->

    <style name="ShapeAppearance.CameraX.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/camerax_small_component_corner_radius</item>
    </style>

    <style name="ShapeAppearance.CameraX.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/camerax_medium_component_corner_radius</item>
    </style>

    <style name="ShapeAppearance.CameraX.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/camerax_large_component_corner_radius</item>
    </style>

    <!-- ShapeAppearance overlay for components which can be 'marked' by rounding their top left -->
    <!-- corner - ie. email cards which have been starred -->
    <style name="ShapeAppearanceOverlay.CameraX.MediumComponent.Marked" parent="">
        <item name="cornerSizeTopLeft">@dimen/camerax_small_component_corner_radius</item>
    </style>

    <dimen name="camerax_small_component_corner_radius">24dp</dimen>
    <dimen name="camerax_medium_component_corner_radius">0dp</dimen>
    <dimen name="camerax_large_component_corner_radius">12dp</dimen>

</resources>
